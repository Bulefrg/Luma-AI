{
  "manifest_version": 3,
  "name": "Luma AI v1.1.1",
  "version": "1.1",
  "description": "Выделяй текст и получай ответ от ИИ",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/Vector.png",
    "32": "icons/2.png",
    "48": "icons/3.png",
    "128": "icons/4.png"
  }
}
